<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_user_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".UserHistoryFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/temp_logo"
                android:contentDescription="@string/logo"
                android:padding="5dp"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/profilePicture"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/showChoosePhoto"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/insert_img"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/user_history_insert_profile"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/user_history_edot"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:gravity="center_horizontal"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/user_history_warning"
                                android:textColor="@color/red"
                                android:textSize="15sp"
                                android:gravity="start"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_first_name"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextFirstName"
                                    android:hint="@string/user_history_first_name_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_last_name"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextLastName"
                                    android:layout_width="match_parent"
                                    android:hint="@string/user_history_last_name_edt"
                                    android:layout_height="48dp"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_phone"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextPhone"
                                    android:layout_width="match_parent"
                                    android:hint="@string/user_history_phone_edt"
                                    android:layout_height="48dp"
                                    android:inputType="phone"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_line"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextLine"
                                    android:hint="@string/user_history_line_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_salary"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextSalary"
                                    android:layout_width="match_parent"
                                    android:hint="@string/user_history_salary_edt"
                                    android:layout_height="48dp"
                                    android:inputType="number"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_free_time"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextFree"
                                    android:layout_width="match_parent"
                                    android:hint="@string/user_history_free_time_edt"
                                    android:layout_height="48dp"
                                    android:inputType="number"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_consent"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextConsent"
                                    android:layout_width="match_parent"
                                    android:hint="@string/user_history_consent_edt"
                                    android:layout_height="48dp"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_address"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/user_history_address_edt"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"
                                    android:maxLines="5"
                                    android:gravity="top|start"
                                    android:scrollHorizontally="false"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_history_insert_home_picture"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/star"
                                        android:textColor="@color/red"
                                        android:textSize="20sp"/>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/homePicture01"
                                        android:layout_width="100dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_height="100dp"
                                        android:backgroundTint="@color/gray"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:layout_margin="10dp">
                                        <ImageView
                                            android:id="@+id/showChoosePhoto01"
                                            android:layout_width="match_parent"
                                            android:scaleType="centerCrop"
                                            android:contentDescription="@string/insert_img"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="@string/user_history_insert_picture"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>
                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/homePicture02"
                                        android:layout_width="100dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_height="100dp"
                                        android:backgroundTint="@color/gray"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:layout_margin="10dp">
                                        <ImageView
                                            android:id="@+id/showChoosePhoto02"
                                            android:layout_width="match_parent"
                                            android:scaleType="centerCrop"
                                            android:contentDescription="@string/insert_img"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="@string/user_history_insert_picture"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>
                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/homePicture03"
                                        android:layout_width="100dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_height="100dp"
                                        android:backgroundTint="@color/gray"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:layout_margin="10dp">
                                        <ImageView
                                            android:id="@+id/showChoosePhoto03"
                                            android:layout_width="match_parent"
                                            android:scaleType="centerCrop"
                                            android:contentDescription="@string/insert_img"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="@string/user_history_insert_picture"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/btn_save"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>