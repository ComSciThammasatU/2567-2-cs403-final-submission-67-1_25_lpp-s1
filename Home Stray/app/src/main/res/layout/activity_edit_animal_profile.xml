<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/temp_logo"
                android:contentDescription="@string/logo"
                android:padding="5dp"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/insertPhoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/showChoosePhoto"
                    android:layout_width="match_parent"
                    android:contentDescription="@string/insert_img"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/insertProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/user_history_insert_profile"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/edit_animal_profile"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:gravity="center_horizontal"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_name"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextName"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_name_edt"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:layout_height="48dp"
                                    android:autofillHints="Name"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/star"
                                    android:gravity="top"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_age"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextAge"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_age_edt"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:layout_height="48dp"
                                    android:autofillHints="Name"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_type"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <Spinner
                                    android:id="@+id/spinnerType"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_habit"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextHabits"
                                    android:hint="@string/create_animal_habit_edt"
                                    android:layout_width="match_parent"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:layout_height="48dp"
                                    android:autofillHints="Habits"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_breed"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextBreed"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_breed_edt"
                                    android:layout_height="48dp"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:autofillHints="Breed"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_color"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextColor"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_color_edt"
                                    android:layout_height="48dp"
                                    android:autofillHints="Color"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/star"
                                    android:gravity="top"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_medical"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>

                                <EditText
                                    android:id="@+id/editTextMedical"
                                    android:hint="@string/create_animal_medical_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:autofillHints="Medical History"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_sickness"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextSickness"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_sickness_edt"
                                    android:layout_height="48dp"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:autofillHints="Sickness"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:foregroundGravity="center_vertical"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_foundation"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextFoundation"
                                    android:layout_width="match_parent"
                                    android:foregroundGravity="center_vertical"
                                    android:hint="@string/create_animal_foundation_edt"
                                    android:layout_height="48dp"
                                    android:autofillHints="Foundation"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_contact"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextContact"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_contact_edt"
                                    android:layout_height="48dp"
                                    android:autofillHints="Contact"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_address"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextAddress"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_address_edt"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"
                                    android:maxLines="5"
                                    android:gravity="top|start"
                                    android:scrollHorizontally="false"
                                    android:autofillHints="Foundation"
                                    android:imeOptions="actionNext"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/star"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create_animal_history"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/editTextHistory"
                                    android:layout_width="match_parent"
                                    android:hint="@string/create_animal_history_edt"
                                    android:layout_height="48dp"
                                    android:autofillHints="Contact"
                                    android:imeOptions="actionNext"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"
                                    android:maxLines="5"
                                    android:gravity="top|start"
                                    android:scrollHorizontally="false"
                                    android:background="@drawable/rectangle_radius20"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/btn_save"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"/>
                        </LinearLayout>
                    </ScrollView>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>